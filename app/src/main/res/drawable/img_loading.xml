<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <size
                android:width="100dp"
                android:height="100dp" />
        </shape>
    </item>
    <item
        android:bottom="20dp"
        android:left="20dp"
        android:right="20dp"
        android:top="20dp">

        <animated-rotate
            android:drawable="@drawable/loadsir_loading"
            android:fromDegrees="0.0"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="-360.0">

        </animated-rotate>
    </item>
</layer-list>